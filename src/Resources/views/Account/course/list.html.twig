{% extends '@SyliusShop/Account/layout.html.twig' %}

{% block title %}{{ 'My courses'|trans }} | {{ parent() }}{% endblock %}

{% block breadcrumb %}
    <div class="ui breadcrumb">
        <a href="{{ path('sylius_shop_homepage') }}" class="section">{{ 'sylius.ui.home'|trans }}</a>
        <div class="divider"> / </div>
        <a href="{{ path('sylius_shop_account_dashboard') }}" class="section">{{ 'sylius.ui.my_account'|trans }}</a>
        <div class="divider"> / </div>
        <div class="active section">{{ 'My courses'|trans }}</div>
    </div>
{% endblock %}

{% block subcontent %}
    <div class="ui segment">
        <ul>
            {% for course in courses %}
                <li>
                    <a href="{{ path('sylius_shop_account_course', {slug: course.slug}) }}">
                        {{ course.name }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
